<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.blogposts.any? %>
      <h3>Blogposts (<%= @user.blogposts.count %>)</h3>
      <ol class="blogposts">
        <%= render @blogposts %>
      </ol>
      <%= will_paginate @blogposts %>
    <% end %>
  </div>
</div>

